{
  "name": "@syumai/hono-esbuild-bundler",
  "version": "0.1.0",
  "description": "esbuild Bundler Middleware for Hono",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest run",
    "build": "tsup ./src/*.ts ./src/bundlers/*.ts --format esm,cjs --dts --no-splitting --external esbuild-wasm,esbuild",
    "publint": "publint",
    "release": "yarn build && yarn test && yarn publint && yarn publish"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./wasm": {
      "types": "./dist/bundlers/wasm.d.ts",
      "import": "./dist/bundlers/wasm.js",
      "require": "./dist/bundlers/wasm.cjs"
    },
    "./node": {
      "types": "./dist/bundlers/node.d.ts",
      "import": "./dist/bundlers/node.js",
      "require": "./dist/bundlers/node.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "wasm": [
        "./dist/bundlers/wasm"
      ],
      "node": [
        "./dist/bundlers/node"
      ]
    }
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/honojs/middleware.git"
  },
  "homepage": "https://github.com/honojs/middleware",
  "peerDependencies": {
    "hono": ">=3.9.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240620.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.8",
    "esbuild": "^0.21.5",
    "esbuild-wasm": "^0.21.5",
    "hono": "^3.11.7",
    "tsup": "^8.0.1",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=18.14.1"
  }
}
